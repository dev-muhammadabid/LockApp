<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Icons -->
    <ImageView
        android:id="@+id/app_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <!-- Title -->

    <TextView
        android:id="@+id/app_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/app_status"
        app:layout_constraintStart_toEndOf="@+id/app_img"
        app:layout_constraintTop_toTopOf="@+id/app_img" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/app_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textOff="U"
        android:textOn="L"
        android:thumb="@drawable/thumbbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_img"
        app:showText="true"
        app:track="@drawable/trackbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>